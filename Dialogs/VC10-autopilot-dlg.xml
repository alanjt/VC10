<?xml version="1.0"?>

<!-- the layout of this dialog menu mimics the VC10 autopilot panel -->

<PropertyList>
	<name>autopilot</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>VC10 Autopilot</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend/>
			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</button>
	</group>
	<hrule/>

	<group>
		<layout>hbox</layout>
		<default-padding>8</default-padding>
		<group>

			<layout>vbox</layout>

			<group>
				<layout>table</layout>
				
				<checkbox>
					<row>0</row>
					<col>0</col>
					<label>NAV</label>
					<property>autopilot/switches/NAV</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/NAV</property>
					</binding>
				</checkbox>
				
				<text>
					<label>        </label>
					<halign>centre</halign>
					<row>0</row>
					<col>1</col>
				</text>	

				<checkbox>
					<row>0</row>
					<col>2</col>
					<label>AP-1</label>
					<property>autopilot/switches/AP1</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AP1</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>3</col>
					<label>DAMPER-1</label>
					<property>autopilot/switches/damper1</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/damper1</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>4</col>
					<label>DAMPER-2</label>
					<property>autopilot/switches/damper2</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/damper2</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>5</col>
					<label>AP-2</label>
					<property>autopilot/switches/AP2</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AP2</property>
					</binding>
				</checkbox>
				
				<text>
					<label>        </label>
					<halign>centre</halign>
					<row>0</row>
					<col>6</col>
				</text>

				<checkbox>
					<row>0</row>
					<col>9</col>
					<label>ALT</label>
					<property>autopilot/switches/ALT</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/ALT</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>10</col>
					<label>IAS</label>
					<property>autopilot/switches/IAS</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/IAS</property>
					</binding>
				</checkbox>
				
				<checkbox>
					<row>0</row>
					<col>11</col>
					<label>MACH</label>
					<property>autopilot/switches/MACH</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/MACH</property>
					</binding>
				</checkbox>
			</group>

