<?xml version="1.0"?>

<!-- the layout of this dialog menu mimics the VC10 autopilot panel -->

<PropertyList>
	<name>autopilot</name>
	<layout>vbox</layout>
	
	<frame>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>VC10 Autothrottle</label>
		</text>

		<empty><stretch>1</stretch></empty>
	</frame>
	
	<group>
		<layout>hbox</layout>
		<default-padding>8</default-padding>
		<group>
			<layout>vbox</layout>
			<frame>
				<layout>table</layout>
				<checkbox>
					<row>0</row>
					<col>0</col>
					<label>AT-1</label>
					<property>autopilot/switches/AT_1switch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AT_1switch</property>
					</binding>
				</checkbox>
				<checkbox>
					<row>0</row>
					<col>1</col>
					<label>AT-2</label>
					<property>autopilot/switches/AT_2switch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AT_2switch</property>
					</binding>
				</checkbox>
				<checkbox>
					<row>0</row>
					<col>3</col>
					<label>AT-3</label>
					<property>autopilot/switches/AT_3switch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AT_3switch</property>
					</binding>
				</checkbox>
				<checkbox>
					<row>0</row>
					<col>4</col>
					<label>AT-4</label>
					<property>autopilot/switches/AT_4switch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AT_4switch</property>
					</binding>
				</checkbox>
				
				<text>
					<label>THROTTLES</label>
					<halign>center</halign>
					<row>1</row>
					<col>2</col>
				</text>
						
				<slider>
					<name>Knots</name>
					<label>Airspeed</label>
					<halign>centre</halign>
					<row>2</row>
					<col>2</col>
					<width>10</width>
					<property>autopilot/internal/AT_setknots</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>Knots</object-name>
					</binding>
					<min>100</min>
					<max>180</max>
					<step>1</step>
				</slider>			

				<text>
					<row>3</row><col>2</col>
					<label>knots</label>
					<format>%3d</format>
					<property>autopilot/internal/AT_setknots</property>
					<live>true</live>
				</text>
				
				<checkbox>
					<row>4</row><col>1</col>
					<label>AT Power</label>
					<property>autopilot/switches/AT_powerswitch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AT_powerswitch</property>
					</binding>
				</checkbox>
				
				<slider>
					<name>Engage</name>
					<label>AT Engage</label>
					<halign>centre</halign>
					<row>4</row><col>2</col>
					<width>5</width>
					<height>5</height>
					<property>autopilot/switches/AT_engageswitch</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>Engage</object-name>
					</binding>
					<min>-1</min>
					<max>1</max>
					<step>1</step>
				</slider>				
				
				<text>
					<label>AT1  OFF  AT2</label>
					<halign>center</halign>
					<row>5</row>
					<col>2</col>
				</text>
				
			</frame>
		</group>
	</group>
		
	<frame>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>VC10 Autopilot</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend/>
			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>>
		</button>
	</frame>
	<hrule/>

	<group>
		<layout>hbox</layout>
		<default-padding>8</default-padding>
		<group>
			<layout>vbox</layout>
			<frame>
				<layout>table</layout>
				
				<checkbox>
					<row>0</row>
					<col>0</col>
					<label>NAV</label>
					<property>autopilot/Logic/NAV-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/NAV-sw</property>
					</binding>
				</checkbox>
				
				<text>
					<label/>
					<halign>centre</halign>
					<row>0</row>
					<col>1</col>
				</text>

				<checkbox>
					<row>0</row>
					<col>2</col>
					<label>AP-1</label>
					<property>autopilot/Logic/AP1-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/AP1-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>3</col>
					<label>DAMPER-1</label>
					<property>autopilot/Logic/YD1-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/YD1-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>4</col>
					<label>DAMPER-2</label>
					<property>autopilot/Logic/YD2-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/YD2-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>5</col>
					<label>AP-2</label>
					<property>autopilot/Logic/AP2-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/AP2-sw</property>
					</binding>
				</checkbox>
				
				<text>
					<label/>
					<halign>centre</halign>
					<row>0</row>
					<col>6</col>
				</text>

				<checkbox>
					<row>0</row>
					<col>9</col>
					<label>ALT</label>
					<property>autopilot/Logic/ALT-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/ALT-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>10</col>
					<label>IAS</label>
					<property>autopilot/Logic/IAS-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/IAS-sw</property>
					</binding>
				</checkbox>
				
				<checkbox>
					<row>0</row>
					<col>11</col>
					<label>MACH</label>
					<property>autopilot/Logic/MACH-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/Logic/MACH-sw</property>
					</binding>
				</checkbox>
			</frame>
			<hrule/>
			
			<frame>
				<layout>table</layout>
				<slider>
					<name>Mode</name>
					<label>Mode</label>
					<halign>centre</halign>
					<row>1</row>
					<col>0</col>
					<width>10</width>
					<property>autopilot/switches/mode-knob</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>Mode</object-name>
					</binding>
					<min>-1</min>
					<max>4</max>
					<step>1</step>
				</slider>
				<text>
					<row>2</row>
					<col>0</col>
					<label>mode</label>
					<format>%s</format>
					<property>autopilot/settings/Mode</property>
					<live>true</live>
				</text>
				<text>
					<row>3</row>
					<col>0</col>
					<label>-9.99</label>
					<format>%2d</format>
					<property>autopilot/switches/mode-knob</property>
					<live>true</live>
				</text>
				
				<slider>
					<name>pitch</name>
					<label>Pitch</label>
					<row>1</row>
					<col>1</col>
					<height>10</height>
					<vertical>true</vertical>
					<property>autopilot/settings/pitch-wheel-deg</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>pitch</object-name>
					</binding>
					<min>-14</min>
					<max>14</max>
					<step>-0.1</step>
				</slider>
				<text>
					<row>3</row>
					<col>1</col>
					<label>-9.99</label>
					<format>%2d</format>
					<property>autopilot/settings/pitch-wheel-deg</property>
					<live>true</live>
				</text>
				
				<text>
					<label>Turn</label>
					<halign>centre</halign>
					<row>1</row>
					<col>2</col>
				</text>
				<dial>
					<name>turn</name>
					<row>1</row>
					<col>2</col>
					<property>autopilot/settings/TurnKnob</property>
					<wrap>false</wrap>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>turn</object-name>
					</binding>
					<min>-25</min>
					<max>25</max>
					<step>1.0</step>
				</dial>
				<text>
					<row>3</row>
					<col>2</col>
					<label>-9.99</label>
					<format>%2.1f</format>
					<property>autopilot/settings/TurnKnob</property>
					<live>true</live>
				</text>
				
				<slider>
					<name>pitch2</name>
					<label>Pitch</label>
					<row>1</row>
					<col>3</col>
					<height>10</height>
					<vertical>true</vertical>
					<property>autopilot/settings/pitch-wheel-deg</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>pitch2</object-name>
					</binding>
					<min>-14</min>
					<max>14</max>
					<step>0.1</step>
				</slider>
				<text>
					<row>3</row>
					<col>3</col>
					<label>-9.99</label>
					<format>%2d</format>
					<property>autopilot/settings/pitch-wheel-deg</property>
					<live>true</live>
				</text>
				
				<slider>
					<name>datum</name>
					<label>Datum</label>
					<row>1</row>
					<col>4</col>
					<height>10</height>
					<vertical>true</vertical>
					<property>autopilot/settings/datum_norm</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>datum</object-name>
					</binding>
					<min>-1</min>
					<max>1</max>
					<step>0.05</step>
				</slider>
				<text>
					<row>3</row>
					<col>4</col>
					<label>-9.99</label>
					<format>% 1.2f</format>
					<property>autopilot/settings/datum_norm</property>
					<live>true</live>
				</text>
			</frame>
			<hrule/>
		</group>
	</group>

	<frame>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>Autopilot Power</label>
		</text>

		<empty><stretch>1</stretch></empty>
	</frame>
	
	<group>
		<layout>hbox</layout>
		<default-padding>8</default-padding>
		<group>
			<layout>vbox</layout>
			<frame>
				<layout>table</layout>
				<checkbox>
					<row>0</row>
					<col>0</col>
					<label>AP-1 Power</label>
					<property>autopilot/switches/AP_MasterL_switch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AP_MasterL_switch</property>
					</binding>
				</checkbox>
				<checkbox>
					<row>0</row>
					<col>1</col>
					<label>AP-2 Power</label>
					<property>autopilot/switches/AP_MasterR_switch</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AP_MasterR_switch</property>
					</binding>
				</checkbox>
				
			</frame>
		</group>
	</group>

	<button>
		<legend>Close</legend>
		<default>true</default>
		<key>Esc</key>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>

</PropertyList>
