<?xml version="1.0"?>

<!-- the layout of this dialog menu mimics the VC10 autopilot panel -->

<PropertyList>
	<name>autopilot</name>
	<layout>vbox</layout>

	<frame>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>VC10 Autopilot</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend/>
			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</button>
	</frame>
	<hrule/>

	<group>
		<layout>hbox</layout>
		<default-padding>8</default-padding>
		<group>
			<layout>vbox</layout>
			<frame>
				<layout>table</layout>
				
				<checkbox>
					<row>0</row>
					<col>0</col>
					<label>NAV</label>
					<property>autopilot/switches/NAV-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/NAV-sw</property>
					</binding>
				</checkbox>
				
				<text>
					<label/>
					<halign>centre</halign>
					<row>0</row>
					<col>1</col>
				</text>

				<checkbox>
					<row>0</row>
					<col>2</col>
					<label>AP-1</label>
					<property>autopilot/switches/AP1-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AP1-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>3</col>
					<label>DAMPER-1</label>
					<property>autopilot/switches/YawDamper1-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/YawDamper1-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>4</col>
					<label>DAMPER-2</label>
					<property>autopilot/switches/YawDamper2-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/YawDamper2-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>5</col>
					<label>AP-2</label>
					<property>autopilot/switches/AP2-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/AP2-sw</property>
					</binding>
				</checkbox>
				
				<text>
					<label/>
					<halign>centre</halign>
					<row>0</row>
					<col>6</col>
				</text>

				<checkbox>
					<row>0</row>
					<col>9</col>
					<label>ALT</label>
					<property>autopilot/switches/ALT-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/ALT-sw</property>
					</binding>
				</checkbox>

				<checkbox>
					<row>0</row>
					<col>10</col>
					<label>IAS</label>
					<property>autopilot/switches/IAS-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/IAS-sw</property>
					</binding>
				</checkbox>
				
				<checkbox>
					<row>0</row>
					<col>11</col>
					<label>MACH</label>
					<property>autopilot/switches/MACH-sw</property>
					<live>true</live>
					<binding>
						<command>property-toggle</command>
						<property>autopilot/switches/MACH-sw</property>
					</binding>
				</checkbox>
			</frame>
			<hrule/> 
			
			<frame>
<!--				<layout>hbox</layout> -->
				<layout>table</layout>
				<text>
					<label>Mode</label>
					<halign>centre</halign>
					<row>0</row>
					<col>0</col>
				</text>
				<text>
					<label>Turn</label>
					<halign>centre</halign>
					<row>0</row>
					<col>3</col>
				</text>
				<slider>
					<name>Mode</name>
					<halign>centre</halign>
					<row>1</row>
					<col>0</col>
					<property>autopilot/switches/mode-knob</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>Mode</object-name>
					</binding>
					<min>-1</min>
					<max>4</max>
					<step>1</step>
				</slider>

				<slider>
					<name>HT-datum</name>
					<row>1</row>
					<col>2</col>
					<height>10</height>
					<vertical>true</vertical>
					<property>autopilot/switches/ht-datum-adj</property>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>HT-datum</object-name>
					</binding>
					<min>-1</min>
					<max>1</max>
					<step>1</step>
				</slider>

				<!--			<dial>
					<name>Roll-deg</name>
					<row>0</row>
					<col>2</col>
					<property>autopilot/settings/target-roll-deg</property>
					<min>-60</min>
					<max>60</max>
					<wrap>false</wrap>
					<live>true</live>
					<binding>
						<command>dialog-apply</command>
						<object-name>Roll-deg</object-name>
					</binding>
				</dial> -->
			</frame>
			<hrule/>
		</group>
	</group>

	<!--	<hrule/> -->

	<button>
		<legend>Close</legend>
		<default>true</default>
		<key>Esc</key>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>

</PropertyList>
