<PropertyList include="VC10-common.xml">
 <sim n="0">
  <description>Vickers VC10</description>
	<startup>
		<splash-texture>VC10_splash.png</splash-texture>
	</startup>
	
  <model n="0">
   	 <path>Models/VC10model.xml</path>
      <livery>
        <file type="string">VC10</file>
      </livery>
