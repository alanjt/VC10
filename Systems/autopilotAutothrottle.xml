<?xml version="1.0"?>

<!--
    Autopilot Configuration for the VC10
-->


<PropertyList>

	<!--
    ===============
    Auto-throttle Mode Selector
    ===============
    -->

	<!-- Ias Error (U-Ud) -->
	<filter>
		<name>U-Ud</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input><property>fdm/jsbsim/velocities/vc-kts</property></input>
		<reference><property>autopilot/settings/AT_setknots</property></reference>
		<output><property>autopilot/internal/AT_U-Ud</property></output>
		<u_min>-100</u_min>
		<u_max>100</u_max>
	</filter>
	
	<filter>
		<name>IAS Demand Throttle</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>-10.0</gain>
		<input><property>autopilot/internal/AT_U-Ud</property></input>
		<output><property>autopilot/internal/throttlec-deg</property></output>
	</filter>

	<filter>
		<name>Throttle_integ</name>
		<debug>false</debug>
		<type>integrator</type>
		<gain>0.1</gain>
		<input>
			<condition>
				<or>
					<equals><property>autopilot/switches/AT_engageswitch</property><value>1</value></equals>
					<equals><property>autopilot/switches/AT_engageswitch</property><value>-1</value></equals>
				</or>
			</condition>
			<expression>
				<product>
					<value>1</value>
					<property>autopilot/internal/throttlec-deg</property>
				</product>
			</expression>
		</input>
		<input><!-- integrator output feedaback if AT not engaged -->
			<expression>
				<product>
					<value>-10</value>
					<property>autopilot/internal/throttlec-deg_integ</property>
				</product>
			</expression>
		</input>
		<output><property>autopilot/internal/throttlec-deg_integ</property></output>
		<u_min>-10</u_min>
		<u_max>10</u_max>
	</filter>

	<filter>
		<name>Autothrottle selector</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>0.025</gain>
		<input>
			<condition>
				<or>
					<equals><property>autopilot/switches/AT_engageswitch</property><value>1</value></equals>
					<equals><property>autopilot/switches/AT_engageswitch</property><value>-1</value></equals>
				</or>
			</condition>
			<property>autopilot/internal/throttlec-deg</property>
		</input>
		<!-- no selection - default -->
		<input><value>0.0</value></input>
		<output><property>autopilot/commands/throttlec-norm</property></output>
		<u_min>-1</u_min>
		<u_max>1</u_max>
	</filter>
	
