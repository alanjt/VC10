<?xml version="1.0"?>
<!--
    Autopilot Configuration for the VC10.
-->
<PropertyList>
	<!--
    ============================================================
   Pitch Modes - IAS Hold
    ============================================================
-->

	
	<!-- integrator thetaRef_deg tracks pitch angle theta-deg while Autopilot is not in IAS hold mode-->
	<filter>
		<name>pitch_reference</name>
		<debug>false</debug>
		<type>integrator</type>
		<gain>1.0</gain>
		<input>
			<condition><not><property>autopilot/switches/IAS-sw</property></not></condition>
			<expression>
				<dif>
					<property>fdm/jsbsim/attitude/theta-deg</property>
					<property>autopilot/IASHold/thetaRef_deg</property>
				</dif>
			</expression>
		</input>
		<output><property>autopilot/IASHold/thetaRef_deg</property></output>
		<u_min>-20</u_min>
		<u_max>20</u_max>
	</filter>

	<!-- integrator IASRef tracks IAS while Autopilot is not in IAS hold mode-->
	<filter>
		<name>IAS_Reference</name>
		<debug>false</debug>
		<type>integrator</type>
		<gain>1.0</gain>
		<input>
			<condition><not><property>autopilot/switches/IAS-sw</property></not></condition>
			<expression>
				<dif>
					<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
					<property>autopilot/IASHold/IASRef</property>
				</dif>
			</expression>
		</input>
		<output><property>autopilot/IASHold/IASRef</property></output>
		<u_min>-20</u_min>
		<u_max>40000</u_max>
	</filter>

	<filter>
		<name>IAS hold gain</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input><value>0.5</value></input>
		<output><property>autopilot/IASHold/K_IAS</property></output>
	</filter>
	
	<filter><!-- datum knob changes IAS reference by + or minus 17% -->
		<name>IASRef2</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<product>
					<property>autopilot/IASHold/IASRef</property>
					<sum>
						<product>
							<property>autopilot/settings/datum_norm</property>
							<value>0.15</value>
						</product>
						<value>1.0</value>
					</sum>
				</product>
			</expression>
		</input>
		<output><property>autopilot/IASHold/IASRef2</property></output>
		<u_min>160</u_min>
		<u_max>fdm/jsbsim/velocities/Vspeeds/Vm0-kts</u_max>  <!--  Vmo kts -->
	</filter>
	
	<filter>
		<name>IAS Error</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<dif>
					<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
					<property>autopilot/IASHold/IASRef2</property>
				</dif>
			</expression>
		</input>
		<output><property>autopilot/IASHold/IASERR</property></output>
	</filter>
	
	<filter>
		<name>IAS Error Limit</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input><property>autopilot/IASHold/IASERR</property></input>
		<output><property>autopilot/IASHold/IASOUT</property></output>
		<u_min>-50</u_min><!-- limit L3 -->
		<u_max>50</u_max>
	</filter>
	
	<filter>
		<type>exponential</type><!-- The exponential filter is more commonly known as a 1st order lag filter -->
		<debug>false</debug>
		<enable>
			<condition>
				<property>autopilot/switches/AP1orAP2-sw</property>
			</condition>
		</enable>
		<filter-time>0.5</filter-time><!-- TV3 -->
		<input><property>autopilot/IASHold/IASOUT</property></input>
		<output><property>autopilot/IASHold/IASOUTlag</property></output>
	</filter>
	
	<filter>
		<name>IAS error integrator</name>
		<debug>false</debug>
		<type>integrator</type>
		<gain>0.05</gain><!-- integrator gain -->

		<input>
			<condition><property>autopilot/switches/IAS-sw</property></condition>
			<property>autopilot/IASHold/IASOUT</property>
		</input>
		
		<input>
			<expression>
				<product>
					<value>-100.0</value><!-- negative feeback to reduce output towards zero -->
					<property>autopilot/IASHold/IASOTInt</property>
				</product>
			</expression>
		</input>
		
		<output><property>autopilot/IASHold/IASOTInt</property></output>
		<u_min>-100</u_min>
		<u_max>100</u_max>
	</filter>

	<filter>
		<name>IAS Mode IASdot feedback</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain><!-- A3 -->
		<input>
			<property>fdm/jsbsim/velocities/u-dot-fps</property>
		</input>
		<output>
			<property>autopilot/IASHold/IASdot</property>
		</output>
	</filter>
	
	<filter>
		<name>IAS Mode pitch demand</name>
		<debug>false</debug>
		<type>gain</type>
		<gain><property>autopilot/IASHold/K_IAS</property></gain>
		<input>
			<expression>
				<sum>-->
					<property>autopilot/IASHold/IASOUTlag</property>
					<property>autopilot/IASHold/IASOTInt</property>
					<property>autopilot/IASHold/IASdot</property>
					<value>0.0</value>
				</sum>
			</expression>
		</input>
		<output>autopilot/IASHold/THECOM</output>
		<u_min>-20</u_min>
		<u_max>20</u_max>
	</filter>
	

</PropertyList>
