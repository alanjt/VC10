<PropertyList>

	<path>GenDriveGuard.ac</path>
	<animation>
		<type>material</type>

		<object-name>guard</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<!-- Switch guard -->
	<animation>
		<type>rotate</type>
		<object-name>guard</object-name>
		<property>VC10/electric/ac/generator/GenDrv3-Guard</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>-90.0</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>-0.0003</y-m>
			<z-m>0.0</z-m>
		</center>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>guard</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>VC10/electric/ac/generator/GenDrv3-Guard</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch3</property>
			</binding>
		</action>
	</animation>

	<!--  -->

</PropertyList>
