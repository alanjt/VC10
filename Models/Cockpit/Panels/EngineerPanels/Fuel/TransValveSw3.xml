	<!-- Transfer Valve 3 Switch -->
	<animation>
		  <type>rotate</type>
		  <object-name>Lever</object-name>
		  <object-name>LeverPin</object-name>
		  <property>VC10/fuel/switches/TransValveSw3</property>
      <factor>-60</factor>
		  <axis>
		   <x>0</x>
		   <y>1</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>-0.0</y-m>
		  <z-m>0.0</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>Lever</object-name>
		  <object-name>LeverPin</object-name>
		  <object-name>Case</object-name>
		  <object-name>Guard</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>VC10/fuel/switches/TransValveSw3</property>
		    </binding>          
		    <binding>
		      <command>property-toggle</command>
		      <property>sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>

</PropertyList>
