	<!-- Throttle levers -->
	<animation>
		<type>rotate</type>
		<object-name>throttle.001</object-name>
		<object-name>reverser.001</object-name>
		<condition>
			<not><property>engines/engine[0]/reversed</property></not>
		</condition>
		<property>controls/engines/engine[0]/throttle</property>
		<factor>-50</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>slider</type>
		<object-name>throttle.001</object-name>
		<property>controls/engines/engine[0]/throttle</property>
		<drag-direction>vertical</drag-direction>
		<action>
			<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine[0]/throttle</property>
			<factor> 0.05 </factor>
			<min>0.0</min>
			<max>1</max>
			<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>throttle.002</object-name>>
		<property>controls/engines/engine[1]/throttle</property>
		<factor>-50</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>throttle.003</object-name>
		<property>controls/engines/engine[2]/throttle</property>
		<factor>-50</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>slider</type>
		<object-name>throttle.003</object-name>
		<property>controls/engines/engine[2]/throttle</property>
		<drag-direction>vertical</drag-direction>
		<action>
			<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine[2]/throttle</property>
			<factor> 0.05 </factor>
			<min>0.0</min>
			<max>1</max>
			<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>throttle.004</object-name>
		<object-name>reverser.004</object-name>
		<condition>
			<not><property>engines/engine[3]/reversed</property></not>
		</condition>
		<property>controls/engines/engine[3]/throttle</property>
		<factor>-50</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	<animation>
		<type>slider</type>
		<object-name>throttle.004</object-name>
		<property>controls/engines/engine[3]/throttle</property>
		<drag-direction>vertical</drag-direction>
		<action>
			<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine[3]/throttle</property>
			<factor> 0.05 </factor>
			<min>0.0</min>
			<max>1</max>
			<wrap>false</wrap>
			</binding>
		</action>
	</animation>


	<!-- Thrust  Reverse levers -->
	<animation>
		<type>rotate</type>
		<object-name>reverser.001</object-name>
		<condition>
			<property>engines/engine[0]/reversed</property>
		</condition>
		<property>controls/engines/engine[0]/throttle</property>
		<factor>140</factor>
		<center>
			<x-m>0.093</x-m>
			<y-m>0.0</y-m>
			<z-m>0.066</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>reverser.004</object-name>
		<condition>
			<property>engines/engine[3]/reversed</property>
		</condition>
		<property>controls/engines/engine[3]/throttle</property>
		<factor>140</factor>
		<center>
			<x-m>0.093</x-m>
			<y-m>0.0</y-m>
			<z-m>0.066</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>reverser.001</object-name>
		<object-name>reverser.004</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>VC10.togglereverser();</script>
			</binding>
		</action>
	</animation>

	<!-- speedbrake lever -->
	<animation>
		<type>rotate</type>
		<object-name>SpeedBrkLever</object-name>
		<!--	<property>controls/flight/spoilers</property> -->
		<property>controls/flight/speedbrake</property>
		<factor>70</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.04</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>slider</type>
		<object-name>SpeedBrkLever</object-name>
		<property>controls/flight/speedbrake</property>
		<drag-direction>vertical</drag-direction>
		<increase>
			<binding>
				<command>nasal</command>
				<script>controls.stepProps("/controls/flight/speedbrake", "/sim/speedbrake", -1);</script>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>controls.stepProps("/controls/flight/speedbrake", "/sim/speedbrake", 1);</script>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</decrease>
	</animation>

	<!-- flap lever -->
	<animation>
		<type>rotate</type>
		<object-name>FlapLever</object-name>
		<property>controls/flight/flaps</property>
		<factor>50</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.04</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>slider</type>
		<object-name>FlapLever</object-name>
		<property>controls/flight/flaps</property>
		<drag-direction>vertical</drag-direction>
		<increase>
			<binding>
				<command>nasal</command>
				<script>controls.stepProps("/controls/flight/flaps", "/sim/flaps", -1);</script>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>controls.stepProps("/controls/flight/flaps", "/sim/flaps", 1);</script>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</decrease>
	</animation>


</PropertyList>
