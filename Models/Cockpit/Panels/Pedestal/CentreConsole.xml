<PropertyList>

	<path>CentreConsole.ac</path>
	
	<model>
		<name>Pilot Throttles</name>
		<path>Aircraft/VC10/Models/Cockpit/Panels/Pedestal/ThrottlesFlapsTail.xml</path>
		<offsets>
			<x-m>0.111</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</model>
	
	<model>
		<name>HP Cocks</name>
		<path>Aircraft/VC10/Models/Cockpit/Panels/Pedestal/HPcocks.xml</path>
		<offsets>
			<x-m>0.750</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</model>
	
	 <model>
		<path>Aircraft/VC10/Models/Cockpit/Panels/Autopilot/StbyYawdamper.xml</path>
		<name>StbyYawdamper</name>
		<offsets>   
			<x-m>0.355</x-m>
			<y-m>-0.187</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	 </model>
	 
	 <model>
		<path>Aircraft/VC10/Models/Cockpit/Instruments/radio/StationBoxCaptain.xml</path>
		<name>StationBoxCaptain</name>
		<offsets>   
			<x-m>0.355</x-m>
			<y-m>-0.160</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	 </model>
	
	 <!-- Autopilot controller -->


	 <model>
		<path>Aircraft/VC10/Models/Cockpit/Panels/Autopilot/AT_controller.xml</path>
		<name>AT_controller</name>
		<offsets>   
			<x-m>0.355</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	 </model>

	 <model>
		<path>Aircraft/VC10/Models/Cockpit/Panels/Autopilot/AP_controller.xml</path>
		<name>AP_controller</name>
		<offsets>   
			<x-m>0.358</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	 </model>
	 
	 <model>
		<path>Aircraft/VC10/Models/Cockpit/Panels/Pedestal/TrimPanel.xml</path>
		<name>AP_controller</name>
		<offsets>   
			<x-m>0.4863</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	 </model>

	<model>
		<path>Aircraft/VC10/Models/Cockpit/Instruments/radio/NAV_COMcontroller.xml</path>
		<offsets>
			<x-m>0.53</x-m> <!--+ve aft -->
			<y-m>-0.15</y-m> <!--+ve right -->
			<z-m>0.0</z-m> <!--+ve up -->
			<pitch-deg>-90</pitch-deg>
		</offsets>
	</model>

	<model>
		<path>Aircraft/VC10/Models/Cockpit/Instruments/radio/NAV_COMcontroller.xml</path>
		<offsets>
			<x-m>0.53</x-m>
			<y-m>0.15</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	</model>

	<model>
		<path>Aircraft/VC10/Models/Cockpit/Instruments/radio/ADFcontroller.xml</path>		
		<offsets>
			<x-m>0.63</x-m>
			<y-m>-0.15</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	</model>

	<model>
		<path>Aircraft/VC10/Models/Cockpit/Instruments/radio/ADFcontroller.xml</path>
		<offsets>
			<x-m>0.63</x-m>
			<y-m>0.15</y-m>
			<z-m>0.0</z-m>
			<pitch-deg>-90</pitch-deg>
		</offsets>
	</model>


