<?xml version="1.0"?>

<!--TSR2 gear handle-->

<PropertyList> 

<path>gear-handle.ac</path>

  <animation>
  <type>pick</type>
	<object-name>lever</object-name>
  <action>
  <button>0</button>
  <repeatable>false</repeatable>
  <binding>
  <command>property-cycle</command>
    <property>controls/gear/gear-down</property>
	<value>0</value>
	<value>1</value>
  </binding>
  </action>
 </animation>

<!--***rotation***-->

<animation>
	<type>rotate</type>
	<object-name>lever</object-name>
	<property>controls/gear/gear-down</property>
	<interpolation>
		<entry><ind>1</ind><dep>-40</dep></entry>
		<entry><ind>0</ind><dep>40</dep></entry> 
	</interpolation>  
	<center>
		<x-m>-0.01</x-m>
		<y-m>0</y-m>
		<z-m>0</z-m>
	</center>
	<axis>
		<x>0</x>
		<y>-1</y>
		<z>0</z>
	</axis>
</animation>


<!--***LoD***-->

<animation> 
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
