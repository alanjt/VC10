	</animation>
	

<!-- action for nav -->

    <animation>
        <type>select</type>
        <object-name>noNav</object-name>
        <condition>
            <or>
		          <not>
		              <property>instrumentation/nav[0]/data-is-valid</property>
		          </not>
		          <and>
				        <not>
				            <property>instrumentation/nav[0]/from-flag</property>
				        </not>
				        <not>
				            <property>instrumentation/nav[0]/to-flag</property>
				        </not>
				      </and>	          
		        </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>To</object-name>
        <condition>
            <property>instrumentation/nav[0]/to-flag</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>From</object-name>
        <condition>
            <property>instrumentation/nav[0]/from-flag</property>
        </condition>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>Needle</object-name>
        <property>instrumentation/nav[0]/heading-Needle-deflection</property>
        <interpolation>
        <entry><ind>-10.0</ind><dep>-0.0152</dep></entry>
        <entry><ind>10.0</ind><dep>0.0152</dep></entry>
    </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.006</z-m>
        </center>
    </animation>

		<animation>
				<type>textranslate</type>
				<object-name>CrsNum.1</object-name>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<factor>0.001</factor>
				<step>100</step>
				<scroll>1</scroll>
				<axis>
				    <x>0</x>
				    <y>1</y>
				    <z>0</z>
				</axis>
		</animation>

		<animation>
				<type>textranslate</type>
				<object-name>CrsNum.2</object-name>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<factor>0.01</factor>
				<step>10</step>
				<scroll>1</scroll>
				<axis>
				    <x>0</x>
				    <y>1</y>
				    <z>0</z>
				</axis>
		</animation>

		<animation>
				<type>textranslate</type>
				<object-name>CrsNum.3</object-name>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<factor>0.1</factor>
				<step>1</step>
				<scroll>1</scroll>
				<axis>
				    <x>0</x>
				    <y>1</y>
				    <z>0</z>
				</axis>
		</animation>
		
    <animation>
      <type>rotate</type>
      <object-name>course-knob</object-name>
      <property>instrumentation/nav[0]/radials/selected-deg</property>
        <factor>-10</factor>
      <center>
      <x-m> 0.0</x-m>
      <y-m>-0.0389</y-m>
      <z-m>-0.0397</z-m>
      </center>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>crsPane</object-name>
        <visible>false</visible>
