                <step>-5</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>

 

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>15</max-m>
  </animation>

</PropertyList>
