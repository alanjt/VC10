<PropertyList>

<path>radio.ac</path>

<animation>
  <type>material</type>
  <object-name>Panel</object-name>
  <texture>comm.png</texture>
</animation>
	
	<animation>
		<type>material</type>
  		<object-name>Panel</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
			<object-name>TFRbutton</object-name>
			<object-name>StdbyKnob1</object-name>
			<object-name>StdbyKnob2</object-name>
			<object-name>ActKnob1</object-name>
			<object-name>ActKnob2</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
			<object-name>TFRbutton</object-name>
			<object-name>StdbyKnob1</object-name>
			<object-name>StdbyKnob2</object-name>
			<object-name>ActKnob1</object-name>
			<object-name>ActKnob2</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.6</red>
		  <green>0.6</green>
		  <blue>0.6</blue>
		  <factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

  <animation>
		<type>material</type>
			<object-name>ActDigit1</object-name>
			<object-name>ActDigit2</object-name>
			<object-name>ActDigit3</object-name>
			<object-name>ActDigit4</object-name>
			<object-name>ActDigit5</object-name>
			<object-name>DecimalActive</object-name>
			<object-name>StdbyDigit1</object-name>
			<object-name>StdbyDigit2</object-name>
			<object-name>StdbyDigit3</object-name>
			<object-name>StdbyDigit4</object-name>
			<object-name>StdbyDigit5</object-name>
			<object-name>DecimalStdby</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
			<object-name>ActDigit1</object-name>
			<object-name>ActDigit2</object-name>
			<object-name>ActDigit3</object-name>
			<object-name>ActDigit4</object-name>
			<object-name>ActDigit5</object-name>
			<object-name>DecimalActive</object-name>
			<object-name>StdbyDigit1</object-name>
			<object-name>StdbyDigit2</object-name>
			<object-name>StdbyDigit3</object-name>
			<object-name>StdbyDigit4</object-name>
			<object-name>StdbyDigit5</object-name>
			<object-name>DecimalStdby</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.7</green>
		  <blue>0.5</blue>
		  <factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

