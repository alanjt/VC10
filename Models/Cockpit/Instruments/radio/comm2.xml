<!--  Active Freq Knobs -->

<animation>
  <type>rotate</type>
  <object-name>ActKnob1</object-name>
  <property>instrumentation/comm[1]/frequencies/display-sel-mhz</property>
  <interpolation>
    <entry><ind>118</ind><dep>  0</dep></entry>
    <entry><ind>136</ind><dep>720</dep></entry>
  </interpolation>
  <center>
    <x-m>0</x-m>
    <y-m>-0.02338</y-m>
    <z-m>-0.00859</z-m>
  </center>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>ActKnob1</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/comm[1]/frequencies/selected-mhz</property>
      <step>10</step>
      <min>118</min>
      <max>136</max>
      <wrap>true</wrap>
    </binding>				
    <binding>
			<command>property-toggle</command>
			<property>sim/sound/switch3</property>
		</binding>
  </action>
  <action>
