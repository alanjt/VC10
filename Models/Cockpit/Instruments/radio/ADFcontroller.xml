<?xml version="1.0" encoding="UTF-8"?>
<!-- 
Marconi ADF Controller. Type 6409.
Used with Marconi AD360 Automatic Direction Finder.
-->
<PropertyList>

	<path>ADFcontroller.ac</path>


	<animation>
		<type>material</type>
		<object-name>Panel</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Digit1</object-name>
		<object-name>Digit2</object-name>
		<object-name>Digit3</object-name>
		<object-name>Digit4</object-name>
		<object-name>Digit5</object-name>
		<object-name>Decimal</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Digit1</object-name>
		<object-name>Digit2</object-name>
		<object-name>Digit3</object-name>
		<object-name>Digit4</object-name>
		<object-name>Digit5</object-name>
		<object-name>Decimal</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.8</red>
			<green>0.7</green>
			<blue>0.5</blue>
			<factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<!--  ADF Freq Knobs -->

	<animation>
		<type>knob</type>
		<object-name>FreqKnob1</object-name>
		<center><x-m>0</x-m><y-m>-0.0465</y-m><z-m>-0.0345</z-m></center>
		<axis><x>-1</x><y>0</y><z>0</z></axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/frequencies/selected-khz</property>
				<factor>100.0</factor>
				<min>190.0</min>
				<max>1799.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Adjust ADF 100Khz: %.2f</label>
				<tooltip-id>adfknob1</tooltip-id>
				<property>instrumentation/adf[0]/frequencies/selected-khz</property>
			</binding>
		</hovered>
	</animation>

	<animation>
		<type>knob</type>
		<object-name>FreqKnob2</object-name>
		<center><x-m>0</x-m><y-m>-0.0</y-m><z-m>-0.0345</z-m></center>
		<axis><x>-1</x><y>0</y><z>0</z></axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/frequencies/selected-khz</property>
				<factor>10.0</factor>
				<min>190.0</min>
				<max>1799.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Adjust ADF 10Khz: %.2f</label>
				<tooltip-id>adfknob2</tooltip-id>
				<property>instrumentation/adf[0]/frequencies/selected-khz</property>
			</binding>
		</hovered>
	</animation>

	<animation>
		<type>knob</type>
		<object-name>FreqKnob3</object-name>
		<center><x-m>0</x-m><y-m>-0.0465</y-m><z-m>-0.0345</z-m></center>
		<axis><x>-1</x><y>0</y><z>0</z></axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/frequencies/selected-khz</property>
				<factor>1.0</factor>
				<min>190.0</min>
				<max>1799.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Adjust ADF 100Khz: %.2f</label>
				<tooltip-id>adfknob1</tooltip-id>
				<property>instrumentation/adf[0]/frequencies/selected-khz</property>
			</binding>
		</hovered>
	</animation>

	<!--  ADF Freq Digits -->

	<animation>
		<type>textranslate</type>
		<object-name>Digit1</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<bias>0.005</bias>
		<axis><x>0</x><y>1</y><z>0</z></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Digit2</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis><x>0</x><y>1</y><z>0</z></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Digit3</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis><x>0</x><y>1</y><z>0</z></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Digit4</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis><x>0</x><y>1</y><z>0</z></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Digit5</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>1.0</factor>
		<step>0.1</step>
		<bias>0.005</bias>
		<axis><x>0</x><y>1</y><z>0</z></axis>
	</animation>

	<animation>
		<type>knob</type>
		<object-name>ModeKnob</object-name>
		<center><x-m>0</x-m><y-m>0.0377</y-m><z-m>0.0364</z-m></center>
		<axis><x>-1</x><y>0</y><z>0</z></axis>
		<property>instrumentation/adf[0]/Mode_knob</property>
		<factor>8.0</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/Mode_knob</property>
				<factor>1.0</factor>
				<min>0</min>
				<max>3</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>0</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/mode</property>
				<value>off</value>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>0</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/power-btn</property>
				<value>0</value>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>0</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/ident-audible</property>
				<value>0</value>
			</binding>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>0</value>
					</greater-than>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/power-btn</property>
				<value>1</value>
			</binding>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>0</value>
					</greater-than>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/ident-audible</property>
				<value>1</value>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>1</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/mode</property>
				<value>adf</value>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>2</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/mode</property>
				<value>ant</value>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>instrumentation/adf[0]/Mode_knob</property>
						<value>3</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/mode</property>
				<value>loop</value>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>ADF Mode: %.2f</label>
				<tooltip-id>ModeKnob</tooltip-id>
				<property>instrumentation/adf[0]/Mode_knob</property>
			</binding>
		</hovered>
	</animation>

	<animation>
		<type>knob</type>
		<object-name>GainKnob</object-name>
		<center><x-m>0</x-m><y-m>-0.0538</y-m><z-m>0.001</z-m></center>
		<axis><x>-1</x><y>0</y><z>0</z></axis>
		<property>instrumentation/adf[0]/volume-norm</property>
		<factor>8.0</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/volume-norm</property>
				<factor>0.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>ADF Gain: %.2f</label>
				<tooltip-id>GainKnob</tooltip-id>
				<property>instrumentation/adf[0]/volume-norm</property>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>material</type>
		<object-name>LoopKnob</object-name>
		<object-name>BFOsw</object-name>
		<object-name>BFOsw_nut</object-name>
		<object-name>Sharpsw</object-name>
		<object-name>Sharpsw_nut</object-name>
		<object-name>BFOknob</object-name>
		<object-name>BFOknob_nut</object-name>
		<object-name>ModeKnob</object-name>
		<object-name>FreqKnob1</object-name>
		<object-name>FreqKnob2</object-name>
		<object-name>FreqKnob3</object-name>
		<object-name>GainKnob</object-name>
		<object-name>GainKnob_nut</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>LoopKnob</object-name>
		<object-name>BFOsw</object-name>
		<object-name>BFOsw_nut</object-name>
		<object-name>Sharpsw</object-name>
		<object-name>Sharpsw_nut</object-name>
		<object-name>BFOknob</object-name>
		<object-name>BFOknob_nut</object-name>
		<object-name>ModeKnob</object-name>
		<object-name>FreqKnob1</object-name>
		<object-name>FreqKnob2</object-name>
		<object-name>FreqKnob3</object-name>
		<object-name>GainKnob</object-name>
		<object-name>GainKnob_nut</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.6</green>
			<blue>0.6</blue>
			<factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

</PropertyList>


