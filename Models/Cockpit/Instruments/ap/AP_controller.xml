		<action>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/settings/turn</property>
				<factor>1</factor>
				<min>-25</min>
				<max>25</max>
				<wrap>0</wrap>
			</binding>
		</action>
		<hovered>
