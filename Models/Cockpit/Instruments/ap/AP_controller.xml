	<!-- Autopilot Mode Selector -->
	<animation>
		<type>knob</type>
		<object-name>ModeSelect</object-name>
		<center><x-m>0</x-m><y-m>-0.1296</y-m><z-m>-0.0971</z-m></center>
		<axis><x>-1</x><y>0</y><z>0</z></axis>
		<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
	<!--		<factor>15.0</factor> -->
		<factor>30.0</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
				<factor>1.0</factor>
				<min>0</min>
				<max>5</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch2</property>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>AP Mode Sw: %.2f</label>
				<tooltip-id>APModeKnob</tooltip-id>
				<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
			</binding>
		</hovered>
	</animation>

		<!-- Autopilot Pitch wheels -->
		
	<animation>
		<type>knob</type>
		<object-name>PitchWheels</object-name>
		<property>autopilot/settings/pitch-wheel-deg</property>
		<center>
			<x-m>0.0</x-m><y-m>0.03968</y-m><z-m>-0.03968</z-m>
		</center>
		<axis>
			<x>-1</x><y>0</y><z>0</z>
		</axis>
		<drag-direction>vertical</drag-direction>
		<drag-scale-px>5</drag-scale-px>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/pitch-wheel-deg</property>
				<factor>1</factor>
				<min>-14</min>
				<max>14</max> 
				<wrap>0</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Pitch: %2d</label>
				<tooltip-id>Pitch</tooltip-id>
				<property>autopilot/Bendix-PB-20/settings/pitch-wheel-deg</property>
			</binding>
		</hovered>
	</animation>
	

		<!-- Autopilot bank angle control -->
		<animation>
			<type>rotate</type>
			<object-name>Turn</object-name>
			<property>autopilot/Bendix-PB-20/settings/turn</property>
			<factor>-1</factor>
			<center>
				<x-m>0.0</x-m>
				<y-m>-0.0066</y-m>
				<z-m>-0.09384</z-m>
			</center>
			<axis>
				<x>1.0</x>
				<y>0.0</y>
				<z>0.0</z>
			</axis>
		</animation>
		
	<animation>
		<type>knob</type>
		<object-name>Turn</object-name>
		<property>autopilot/settings/heading-bug-deg</property>
		<center>
			<x-m>0.0</x-m><y-m>0.03968</y-m><z-m>-0.03968</z-m>
		</center>
		<axis>
			<x>-1</x><y>0</y><z>0</z>
		</axis>
		<drag-direction>horizontal</drag-direction>
		<drag-scale-px>5</drag-scale-px>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
				<factor>1</factor>
				<min>-25</min>
				<max>25</max> 
				<wrap>0</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Bank: %2d</label>
				<tooltip-id>Bank</tooltip-id>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
			</binding>
		</hovered>
	</animation>


