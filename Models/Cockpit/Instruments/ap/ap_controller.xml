	<!-- Autopilot Mode Selector -->
	<animation>
		<type>rotate</type>
		<object-name>ModeSelect</object-name>
		<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
		<interpolation>
			<entry><ind> 0</ind><dep> 30.0</dep></entry>
			<entry><ind> 1</ind><dep>  0.0</dep></entry>
			<entry><ind> 2</ind><dep>-30.0</dep></entry>
			<entry><ind> 3</ind><dep>-60.0</dep></entry>
			<entry><ind> 4</ind><dep>-90.0</dep></entry>
			<entry><ind> 5</ind><dep>-120.0</dep></entry>
		</interpolation>
		<center>
			<x-m> 0.0</x-m>
			<y-m>-0.1296</y-m>
			<z-m> -0.0971</z-m>
		</center>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>ModeSelect</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
				<step>1</step>
				<min>0</min>
				<max>5</max>
				<wrap>0</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch2</property>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
				<step>-1</step>
				<min>0</min>
				<max>5</max>
				<wrap>0</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch2</property>
			</binding>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
				<step>1</step>
				<min>0</min>
				<max>5</max>
				<wrap>0</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch2</property>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/controls/mode-selector</property>
				<step>-1</step>
				<min>0</min>
				<max>5</max>
				<wrap>0</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch2</property>
			</binding>
		</action>
	</animation>

	<!-- Autopilot Pitch wheels -->
	<animation>
		<type>rotate</type>
		<object-name>PitchWheels</object-name>
		<property>autopilot/Bendix-PB-20/settings/pitch-wheel-deg</property>
		<factor>12</factor>
		<center>
			<x-m> -0.0264</x-m>
			<y-m> 0.0</y-m>
			<z-m> -0.0906</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>PitchWheels</object-name>
		<action>
			<name>small increase (scrollwheel)</name>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/pitch-wheel-deg</property>
				<step type="double">-0.1</step>
				<min>-30.0</min>
				<max>30.0</max>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/ALT-active</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/IAS-active</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/MACH-active</property>
				<value>0</value>
			</binding>
		</action>
		<action>
			<name>small decrease (scrollwheel)</name>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/pitch-wheel-deg</property>
				<step type="double">0.1</step>
				<min>-30.0</min>
				<max>30.0</max>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/ALT-active</property>
				<value>0</value>
			</binding>
		</action>
		<action>
			<name>reset</name>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-interpolate</command>
				<property>autopilot/Bendix-PB-20/settings/pitch-wheel-deg</property>
				<value>0</value>
				<time>1</time>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/ALT-active</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/IAS-active</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/MACH-active</property>
				<value>0</value>
			</binding>
		</action>
	</animation>

	<!-- Autopilot bank angle control -->
	<animation>
		<type>rotate</type>
		<object-name>Turn</object-name>		
		<property>autopilot/Bendix-PB-20/settings/turn</property>
		<factor>-1</factor>  
		<center>
			<x-m> 0.0</x-m>
			<y-m>-0.025640</y-m>
			<z-m> -0.1418</z-m>
		</center>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>Turn</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-interpolate</command>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
				<value>0</value>
				<time>0.5</time>
			</binding>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<not><property>devices/status/keyboard/shift</property></not>
					<not><property>devices/status/keyboard/super</property></not>
				</condition>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
				<step type="double">0.5</step>
				<min>-35.0</min>
				<max>35.0</max>
			</binding>
			<binding>
				<condition>
					<or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					</or>
				</condition>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
				<step type="double">1.0</step>
				<min>-35.0</min>
				<max>35.0</max>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<not><property>devices/status/keyboard/shift</property></not>
					<not><property>devices/status/keyboard/super</property></not>
				</condition>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
				<step type="double">-0.5</step>
				<min>-35.0</min>
				<max>35.0</max>
			</binding>
			<binding>
				<condition>
					<or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					</or>
				</condition>
				<command>property-adjust</command>
				<property>autopilot/Bendix-PB-20/settings/turn</property>
				<step type="double">-1.0</step>
				<min>-35.0</min>
				<max>35.0</max>
			</binding>
		</action>
	</animation>

