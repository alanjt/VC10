<PropertyList>

	<path>AP_master_sw.ac</path>

	<animation>
		<type>material</type>
		<object-name>AP_MasterNuisance_bar</object-name>
		<object-name>AP_Master_Frame</object-name>
		<object-name>AP_MasterL_switch_lever</object-name>
		<object-name>AP_MasterL_switch_base</object-name>
		<object-name>AP_MasterR_switch_lever</object-name>
		<object-name>AP_MasterR_switch_base</object-name>
		<condition>
			<not><property>systems/electrical/outputs/cabin-dim</property></not>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>pick</type>
		<object-name>AP_MasterL_switch_lever</object-name> 
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>autopilot/Bendix-PB-20/controls/AP_MasterL_switch</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AP_MasterL_switch_lever</object-name> 
		<property>autopilot/Bendix-PB-20/controls/AP_MasterL_switch</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>40</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>-40</dep>
			</entry>
		</interpolation>
		<axis><x> 0</x> <y> 1</y><z> 0</z></axis>
		<center><x-m>0.0</x-m><y-m>0.0</y-m><z-m>-0.0076</z-m></center>
	</animation>


	<animation>
		<type>pick</type>
		<object-name>AP_MasterR_switch_lever</object-name> 
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>autopilot/Bendix-PB-20/controls/AP_MasterR_switch</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AP_MasterR_switch_lever</object-name> 
		<property>autopilot/Bendix-PB-20/controls/AP_MasterR_switch</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>40</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>-40</dep>
			</entry>
		</interpolation>
		<axis><x> 0</x> <y> 1</y><z> 0</z></axis>
		<center><x-m>0.0</x-m><y-m>0.0</y-m><z-m>-0.0076</z-m></center>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>AP_MasterNuisance_bar</object-name> 
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/AP_MasterNuisance_bar</property>
				<value>1</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/AP_MasterL_switch</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>autopilot/Bendix-PB-20/controls/AP_MasterR_switch</property>
				<value>0</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>autopilot/Bendix-PB-20/controls/AP_MasterNuisance_bar</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AP_MasterNuisance_bar</object-name> 
		<property>autopilot/Bendix-PB-20/controls/AP_MasterNuisance_bar</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>-70</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>20</dep>
			</entry>
		</interpolation>
		<axis><x> 0</x> <y> 1</y><z> 0</z></axis>
		<center><x-m>0.0</x-m><y-m>0.0</y-m><z-m>-0.0076</z-m></center>
	</animation>

</PropertyList>
