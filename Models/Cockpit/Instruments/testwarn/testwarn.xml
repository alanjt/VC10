<PropertyList>

  <path>testwarn.ac</path>

	<animation>
		<type>material</type>
		<object-name>knob</object-name>
		<condition>
			<not><property>systems/electrical/outputs/cabin-dim</property></not>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>support</object-name>
		<object-name>knobsup</object-name>
		<object-name>fuse</object-name>
		<object-name>scrue</object-name>
		<condition>
			<not><property>systems/electrical/outputs/cabin-dim</property></not>
		</condition>
		<emission>
			<red>0.15</red>
			<green>0.1</green>
			<blue>0.075</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>support</object-name>
		<object-name>knobsup</object-name>
		<object-name>fuse</object-name>
		<object-name>scrue</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.4</red>
		  <green>0.4</green>
		  <blue>0.4</blue>
		  <factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>
  
    <!-- The warn knop -->
    <animation>
        <type>translate</type>
        <object-name>knob</object-name>
        <property>controls/test/warn-knob</property>
        <factor>0.003</factor>
        <axis>
            <x>-1.0</x>
            <y> 0.0</y>
            <z> 0.0</z>
        </axis>
        <center>
            <x-m> 0.049</x-m>
            <y-m> 0.0003</y-m>
            <z-m>-0.01</z-m>
        </center>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>knob</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>controls/test/warn-knob</property>  
            <value>1.0</value>
          </binding>
        <mod-up>
          <binding>
            <command>property-assign</command>
            <property>controls/test/warn-knob</property>  
            <value>0.0</value>
          </binding>
        </mod-up>
      </action>
    </animation>

</PropertyList>
