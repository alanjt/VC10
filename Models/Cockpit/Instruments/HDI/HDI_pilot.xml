<?xml version="1.0" encoding="UTF-8"?>
<!--####################################################################

Vickers VC10 for Flightgear

########################################################################-->
<PropertyList>

	<path>HDI.ac</path>
  
	<animation>
		<type>material</type>
		<object-name>bank-index</object-name>
		<object-name>CMPTRflag</object-name>
		<object-name>GYROflag</object-name>
		<object-name>ACwing</object-name>
		<object-name>ACtailfin</object-name>
		<object-name>DirectorBar</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>sphere</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.4</red>
			<green>0.3</green>
			<blue>0.2</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Mount</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>bank-index</object-name>
		<object-name>CMPTRflag</object-name>
		<object-name>GYROflag</object-name>
		<object-name>ACwing</object-name>
		<object-name>ACtailfin</object-name>
		<object-name>DirectorBar</object-name>
		<object-name>sphere</object-name>
		<object-name>Mount</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
			<factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>
 
	<animation>
		<type>noshadow</type>
		<object-name>hdi-ring-shadow</object-name>
		<object-name>ACwing</object-name>
		<object-name>ACtailfin</object-name>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>hdi-ring-shadow</object-name>
		<object-name>ACwing</object-name>
		<object-name>ACtailfin</object-name>
		<object-name>shadow</object-name>
	</effect>

	<animation>
		<type>rotate</type>
		<object-name>CMPTRflag</object-name>
		<property>VC10/electric/ess-bus</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>-39</dep>
			</entry>
			<entry>
				<ind>12</ind>
				<dep>-39</dep>
			</entry>
			<entry>
				<ind>12.1</ind>
				<dep>-37</dep>
			</entry>
			<entry>
				<ind>24</ind>
				<dep>31</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.032</y-m>
			<z-m>0.037</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<property>instrumentation/attitude-indicator-electric[0]/indicated-roll-deg</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<property>instrumentation/attitude-indicator-electric[0]/indicated-pitch-deg</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><y>-1</y></axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>bank-index</object-name>
		<property>instrumentation/attitude-indicator-electric[0]/indicated-roll-deg</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><x>1</x></axis>
	</animation>
	
<!-- Flight Director -->	
	<animation>
		<type>rotate</type>
		<object-name>DirectorBar</object-name>
		<property>instrumentation/attitude-indicator-electric[0]/indicated-roll-deg</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>DirectorBar</object-name>
		<property>Autopilot/FlightDirector/RollDemand</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><x>-1</x></axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>DirectorBar</object-name>
		<property>instrumentation/attitude-indicator-electric[0]/indicated-pitch-deg</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>DirectorBar</object-name>
		<property>Autopilot/FlightDirector/PitchDemand</property>
		<center><x-m>0.0444</x-m><y-m>0.0</y-m><z-m>0.0</z-m></center>
		<axis><y>1</y></axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>DirectorBar</object-name>
		<condition>
			<not>
				<equals><property>Autopilot/FlightDirector/ModeSW</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>
	
<!-- Flags -->

	<animation>
		<type>select</type>
		<object-name>GYROflag</object-name>
		<condition>
			<or>
				<not><property>instrumentation/nav[0]/nav-loc</property></not>
				<and>
					<property>instrumentation/nav[0]/nav-loc</property>
					<not><property>instrumentation/nav[0]/gs-in-range</property></not>
				</and>
			</or>
		</condition>
	</animation>


<!--	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>15</max-m>
	</animation> -->

</PropertyList>
