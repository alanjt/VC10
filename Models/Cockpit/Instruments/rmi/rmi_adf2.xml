<?xml version="1.0" encoding="UTF-8"?>
<!--####################################################################

Vickers VC10 for Flightgear

########################################################################-->
<PropertyList>

<path>rmi_adf.ac</path>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>heading</object-name>
		<object-name>Needle1</object-name>
		<object-name>Needle2</object-name>
		<object-name>ring</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
			<object-name>Needle1</object-name>
			<object-name>Needle2</object-name>
			<object-name>ring</object-name>
			<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>
  
	<!-- Compass Card  -->
	<!-- Note:- CaptainÂ´s ADF RMI is driven by No 2 Compass system, Co-pilot ADF RMI is driven by No 1 Compass system -->
	<animation>
		<type>rotate</type>
		<object-name>CompassCard</object-name>
		<property>instrumentation/heading-indicator-fg[0]/indicated-heading-deg</property>
		<factor>-1</factor>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>

	<!-- Needle 1 -->
	<animation>
		<type>rotate</type>
		<object-name>Needle1</object-name>
		<property>instrumentation/adf[0]/indicated-bearing-deg</property>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>

	<!-- Needle 2 -->
	<animation>
		<type>rotate</type>
		<object-name>Needle2</object-name>
		<property>instrumentation/adf[1]/indicated-bearing-deg</property>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>
	
</PropertyList>
