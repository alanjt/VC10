<PropertyList>

	<path>YawDamperPanel.ac</path>
	<animation>
		<type>material</type>
		<object-name>needle-0</object-name>
		<object-name>needle-1</object-name>
		<object-name>needle-2</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>needle-0</object-name>
		<object-name>needle-1</object-name>
		<object-name>needle-2</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
			<factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<!--	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect> -->

	<animation>
		<type>translate</type>
		<object-name>needle-0</object-name>
		<object-name>needle-1</object-name>
		<object-name>needle-2</object-name>
		<property>fdm/jsbsim/afcs/yawdamper-deg</property>
		<interpolation>
			<entry><ind>-30.0</ind><dep> -0.005</dep></entry>
			<entry><ind>  0.0</ind><dep>  0.0</dep></entry>
			<entry><ind> 30.0</ind><dep>  0.005</dep></entry>
		</interpolation>
		<axis><x>0</x><y>1</y><z>0</z></axis>
	</animation>  


</PropertyList>
