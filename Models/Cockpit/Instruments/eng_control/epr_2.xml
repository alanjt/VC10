<PropertyList>

<path>instr_epr.ac</path>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

<animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>engines/engine[1]/epr</property>
  <interpolation>
    <entry><ind>0.0</ind><dep>   0.0</dep></entry>
    <entry><ind>1.0</ind><dep>   0.0</dep></entry>
    <entry><ind>1.4</ind><dep>  97.6</dep></entry>
    <entry><ind>1.9</ind><dep> 218.64</dep></entry>
    <entry><ind>2.4</ind><dep> 327.20</dep></entry>
    <entry><ind>5.0</ind><dep> 327.20</dep></entry>
  </interpolation>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

</PropertyList>
