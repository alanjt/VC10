<!--  Knobs -->

<animation>
  <type>rotate</type>
  <object-name>knob1</object-name>
  <property>instrumentation/transponder/inputs/digit[0]</property>
	<factor>280</factor>
  <center>
    <x-m> 0</x-m>
    <y-m>-0.1781</y-m>
    <z-m> 0.0852</z-m>
  </center>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>knob1</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/transponder/inputs/digit[0]</property>
      <step>1</step>
      <min>0</min>
      <max>7</max>
      <wrap>false</wrap>
    </binding>				
    <binding>
			<command>property-toggle</command>
			<property>sim/sound/switch3</property>
		</binding>
  </action>
  <action>
    <button>1</button>
    <repeatable>false</repeatable>
