<PropertyList>
  <path>starter_switch.ac</path>

	<animation>
		<type>material</type>
		<object-name>cover</object-name>	
		<object-name>sockle</object-name>
		<object-name>switch</object-name>	
		<texture>starter4.png</texture>
	</animation>

	<animation>
		<type>material</type>
		<object-name>cover</object-name>	
		<object-name>sockle</object-name>
		<object-name>switch</object-name>		
		<condition>	
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>systems/electrical/outputs/overhead-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>LampGreenON</object-name>
		<emission>
		  <red>   0 </red>
		  <green> 1.0 </green>
		  <blue>  0 </blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LampGreenON</object-name>
		<condition>
		<and>
			<greater-than>
				<property>VC10/electric/ess-bus</property>
				<value>20</value>
			</greater-than>
			<or>
				<property>controls/test/warn-knob</property>
				<and>
					<property>VC10/electric/external-power-connected</property>
<!--					<property>VC10/electric/ground-connect</property>	 -->
					<property>VC10/electric/ac/generator/GCR4-sw</property>
					<property>VC10/electric/ac/BTB4-relay</property>
					<property>VC10/electric/ac/generator/Gen4Control-sw</property>
					<not><property>engines/engine[3]/running</property></not> 
				</and>
				<and>
					<greater-than>
						<property>VC10/electric/ess-bus</property>
						<value>24</value>
				 </greater-than>
					<property>VC10/electric/ac/generator/GCR4-sw</property>
					<property>VC10/electric/ac/BTB4-relay</property>
					<property>VC10/electric/ac/generator/Gen4Control-sw</property>
					<not><property>engines/engine[3]/running</property></not> 
				</and>
				<and>
					<property>VC10/apu/off-start-run</property>	
					<property>VC10/electric/ac/generator/gen-drive[4]</property>
					<not><property>engines/engine[3]/running</property></not> 
				</and>
			</or>
		</and>
		</condition>
	</animation>
	
  <!-- Cover -->
  <animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>VC10/start/startercover[3]</property>
    <interpolation> 
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>90.0</dep>
            </entry>		
        </interpolation>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
    </axis>
    <center>
    <x-m> 0.0045</x-m>
    <y-m> 0.0</y-m>
    <z-m>-0.018</z-m>
    </center>  
  </animation>

	<animation>
		  <type>pick</type>
		  <object-name>cover</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>VC10/start/startercover[3]</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>sim/sound/switch3</property>
		    </binding>
		  </action>
	</animation>

	<animation>
		  <type>rotate</type>
		  <object-name>switch</object-name>
		  <property>controls/engines/engine[3]/starter</property>
      <factor>-50</factor>
		  <axis>
		   <x>0</x>
		   <y>1</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch</object-name>
		  <object-name>sockle</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>controls/engines/engine[3]/starter</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>

</PropertyList>
