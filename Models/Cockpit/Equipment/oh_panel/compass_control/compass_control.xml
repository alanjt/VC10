          </binding>
					<binding>
						<command>property-toggle</command>
						<property>sim/sound/switch3</property>
					</binding>
      </action>
    </animation>
    
	<!-- magnetic or directional gyro following -->
  <animation>
      <type>rotate</type>
      <object-name>switch.003</object-name>
      <property>instrumentation/compass-control[1]/mag</property>
      <factor>60</factor>
      <axis>
