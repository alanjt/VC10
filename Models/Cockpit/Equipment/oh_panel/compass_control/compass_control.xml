		    <property>instrumentation/compass-control[1]/lat-turn</property>
		    <step>-10</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
		<action>
		  <button>3</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>instrumentation/compass-control[1]/lat-turn</property>
		    <step>1</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
		<action>
		  <button>4</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>instrumentation/compass-control[1]/lat-turn</property>
		    <step>-1</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
	</animation>
	
    <!-- lat North or south knob -->
    <animation>
        <type>translate</type>
        <object-name>switch.002</object-name>
        <property>instrumentation/compass-control[1]/lat-knob</property>
        <factor>0.008</factor>
        <axis>
            <x> 0.0</x>
            <y> 0.0</y>
            <z>-1.0</z>
        </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>switch.002</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
