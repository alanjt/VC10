<PropertyList>

  <path>compass_control.ac</path>

	<animation>
		<type>material</type>
		<object-name>sockle</object-name>
		<object-name>sockle.001</object-name>
		<object-name>turn</object-name>
		<object-name>turn.001</object-name>
		<condition>	
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.4</red>
		  <green>0.4</green>
		  <blue>0.4</blue>
		  <factor-prop>systems/electrical/outputs/overhead-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>switch</object-name>
		<object-name>switch.001</object-name>	
		<object-name>switch.002</object-name>
		<object-name>switch.003</object-name>	
		<condition>	
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>systems/electrical/outputs/overhead-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>info</object-name>
		<visible>false</visible>
		    <action>
		      <name>show info</name>
		      <button>0</button>
		    	<repeatable>true</repeatable>			
		      <binding>
						<command>nasal</command>
						<script>VC10.show_lat_lon()</script>
					</binding>
		    </action>
	</animation>
	
  <!-- select latitude --> 
	<animation>
		<type>rotate</type>
		<object-name>turn</object-name>
		<property>instrumentation/compass-control[0]/lat-turn</property>
		<interpolation>
		  <entry><ind>  0</ind><dep>   0</dep></entry>
		  <entry><ind> 10</ind><dep>  25</dep></entry>
		  <entry><ind> 20</ind><dep>  50</dep></entry>
		  <entry><ind> 30</ind><dep>  95</dep></entry>
		  <entry><ind> 40</ind><dep> 140</dep></entry>
		  <entry><ind> 50</ind><dep> 185</dep></entry>
		  <entry><ind> 60</ind><dep> 230</dep></entry>
		  <entry><ind> 70</ind><dep> 275</dep></entry>
		  <entry><ind> 80</ind><dep> 320</dep></entry>
		  <entry><ind> 90</ind><dep> 345</dep></entry>
		</interpolation>
		<axis>
		 <x>-1</x>
		 <y>0</y>
		 <z>0</z>
		</axis>
		<center>
		<x-m> 0.0</x-m>
		<y-m>-0.0973</y-m>
		<z-m>-0.0665</z-m>
		</center>  
	</animation>
     
	<animation>
		<type>pick</type>
		<object-name>turn</object-name>
		<action>
		  <button>0</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>instrumentation/compass-control[0]/lat-turn</property>
		    <step>10</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
		<action>
		  <button>1</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>instrumentation/compass-control[0]/lat-turn</property>
		    <step>-10</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
		<action>
		  <button>3</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>instrumentation/compass-control[0]/lat-turn</property>
		    <step>1</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
		<action>
		  <button>4</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
		    <property>instrumentation/compass-control[0]/lat-turn</property>
		    <step>-1</step>
		    <min>0</min>
		    <max>90</max>
		    <wrap>0</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
	</animation>
	
    <!-- lat North or south knob -->
    <animation>
        <type>translate</type>
        <object-name>switch.001</object-name>
        <property>instrumentation/compass-control[0]/lat-knob</property>
        <factor>0.008</factor>
        <axis>
            <x> 0.0</x>
            <y> 0.0</y>
            <z>-1.0</z>
        </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>switch.001</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>instrumentation/compass-control[0]/lat-knob</property>  
          </binding>
					<binding>
						<command>property-toggle</command>
						<property>sim/sound/switch3</property>
					</binding>
      </action>
    </animation>
    
	<!-- magnetic or directional gyro following -->
  <animation>
      <type>rotate</type>
      <object-name>switch</object-name>
      <property>instrumentation/compass-control[0]/mag</property>
      <factor>60</factor>
      <axis>
       <x> 0</x>
       <y>-1</y>
       <z> 0</z>
      </axis>
      <center>
      <x-m> 0.0004</x-m>
      <y-m> 0.0</y-m>
      <z-m>-0.0769</z-m>
      </center>  
  </animation>

  <animation>
      <type>pick</type>
      <object-name>switch</object-name>
      <object-name>sockle</object-name>		
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>instrumentation/compass-control[0]/mag</property>
          </binding>		
          <binding>
            <command>property-toggle</command>
            <property>sim/sound/switch1</property>
          </binding>		
      </action>
  </animation>
  
