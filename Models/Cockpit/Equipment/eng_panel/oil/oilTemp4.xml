<PropertyList>

<path>oilTemp.ac</path>
	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>	
		<object-name>sup</object-name>	
		<condition>
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>sup</object-name>	
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>		
		<property>VC10/oil/oil-temp[3]</property>
		<interpolation>
		  <entry><ind>  -40.0</ind><dep> -45.0</dep></entry>
		  <entry><ind>    0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind>  180.0</ind><dep> 210.0</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>

</PropertyList>
