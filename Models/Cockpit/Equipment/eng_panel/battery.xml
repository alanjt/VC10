<PropertyList>
 <path>battery.ac</path>

	<animation>
		<type>material</type>
		<object-name>cover</object-name>
		<object-name>sockle</object-name> 
		<object-name>switch</object-name> 
		<object-name>switch.001</object-name>
		<object-name>turn</object-name>
		<object-name>bezel</object-name>
		<condition>			
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<condition>			
			<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<condition>			
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<!-- galley switch -->
	<animation>
		  <type>rotate</type>
		  <object-name>switch.001</object-name>
		  <property>VC10/galley</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>0.0038</y-m>
		  <z-m>0.0727</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch.001</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		  			<property>VC10/galley</property>
		    </binding>
        <binding>
            <command>nasal</command>
            <script>
            	var ex = getprop("VC10/ess-bus") or 0;
            	if(ex &lt; 20){
            		settimer(func{ setprop("VC10/galley", 0);}, 0.2);
            	}
            </script>
        </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
	
	<!-- battery and alternator -->
	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<condition>			
			<greater-than>
				<property>VC10/ess-bus</property>
				<value>20</value>
			</greater-than>
		</condition>		
		<property>VC10/volt-dc</property>
		<interpolation>
		  <entry><ind>  0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind> 20.0</ind><dep>  60.0</dep></entry>
		  <entry><ind> 40.0</ind><dep> 120.0</dep></entry>
		</interpolation>    
		<center>
		  <x-m>-0.0124</x-m>
		  <y-m> 0.0</y-m>
		  <z-m> 0.0497</z-m>
    </center>  
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>needle.001</object-name>
		<condition>			
			<greater-than>
				<property>VC10/ess-bus</property>
				<value>20</value>
			</greater-than>
		</condition>
		<property>VC10/volt-load</property>
		<interpolation>
		  <entry><ind>   80</ind><dep> -48.0</dep></entry>
		  <entry><ind>  100</ind><dep>   0.0</dep></entry>
		  <entry><ind>  120</ind><dep>  47.0</dep></entry>
		</interpolation>    
		<center>
		  <x-m> 0.0406</x-m>
		  <y-m> 0.0</y-m>
		  <z-m> 0.0435</z-m>
    </center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
  <!-- Cover -->
  <animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>VC10/batt-cover</property>
    <interpolation> 
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-90.0</dep>
            </entry>		
        </interpolation>
    <axis>
     <x> 1</x>
     <y> 0</y>
     <z> 0</z>
    </axis>
    <center>
    <x-m> 0.0</x-m>
    <y-m>-0.0003</y-m>
    <z-m> 0.0157</z-m>
    </center>  
  </animation>

	<animation>
		  <type>pick</type>
		  <object-name>cover</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>VC10/batt-cover</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>sim/sound/switch3</property>
		    </binding>
		  </action>
	</animation>

	<animation>
		  <type>rotate</type>
		  <object-name>switch</object-name>
		  <property>VC10/battery-switch</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch</object-name>
		  <object-name>sockle</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>VC10/battery-switch</property>
		    </binding>
		    <!-- if battery switch set when apu is operating, apu shutdown -->
		    <binding>
		        <command>property-assign</command>
		        <property>VC10/apu/off-start-run</property>
		        <value>0</value>
		    </binding>		  
		    <binding>
		        <command>property-assign</command>
		        <property>VC10/generator/gen-drive[4]</property>
		        <value>0</value>
		    </binding>			    
		    <binding>
		      <command>property-toggle</command>
		      <property>sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
	
  <!-- load and volt selector --> 
	<animation>
		<type>rotate</type>
		<object-name>turn</object-name>
		<property>VC10/load-volt-selector</property>
		<interpolation>
		  <entry><ind> 0</ind><dep>   0</dep></entry>
		  <entry><ind> 1</ind><dep>  45</dep></entry>
		  <entry><ind> 2</ind><dep>  90</dep></entry>
		  <entry><ind> 3</ind><dep> 135</dep></entry>
		  <entry><ind> 4</ind><dep> 180</dep></entry>
		  <entry><ind> 5</ind><dep> 225</dep></entry>
		</interpolation>
		<axis>
		 <x>0</x>
		 <y>1</y>
		 <z>0</z>
		</axis>
		<center>
		<x-m> 0.04</x-m>
		<y-m> 0.0</y-m>
		<z-m> 0.0</z-m>
		</center>  
	</animation>
     
	<animation>
		<type>pick</type>
		<object-name>turn</object-name>
		<action>
		  <button>0</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
				<property>VC10/load-volt-selector</property>
		    <step>1</step>
		    <min>0</min>
		    <max>6</max>
		    <wrap>1</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
		<action>
		  <button>1</button>
		  <repeatable>true</repeatable>
		  <binding>
		    <command>property-adjust</command>
				<property>VC10/load-volt-selector</property>
		    <step>-1</step>
		    <min>0</min>
		    <max>6</max>
		    <wrap>1</wrap>
		  </binding>
		  <binding>
		    <command>property-toggle</command>
		    <property>sim/sound/switch3</property>
		  </binding>
		</action>
	</animation>
 
</PropertyList>
