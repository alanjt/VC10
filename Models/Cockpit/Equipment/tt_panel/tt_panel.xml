  <!-- switch and knobs -->
  <!-- Arial Refuel Master -->
	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>tanker</property>
		<factor>-60</factor>
		<center>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		</center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<visible>true</visible>
		  <action>
		    <name>tanker_on_off</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
        <binding>
            <command>nasal</command>
            <script>
            	var t = getprop("/tanker") or 0;
            	if(!t){
            		setprop("/tanker", 1);
            	}else{
            		setprop("/tanker", 0);
            	}
          		<!-- fall back, if there is no essential power -->
          		if(getprop("VC10/ess-bus") == nil or getprop("VC10/ess-bus") &lt; 20.0){
		      			settimer(func{
		      				setprop("/tanker", 0);
								}, 0.5);
							 	if(getprop("/sim/sound/switch2") == 1){
									 setprop("/sim/sound/switch2", 0); 
								}else{
									 setprop("/sim/sound/switch2", 1);
								}
            	}
            </script>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>
	
    <!-- The warn knop -->
    <animation>
        <type>translate</type>
        <object-name>knob</object-name>
        <property>controls/test/warn-knob</property>
        <factor>0.003</factor>
        <axis>
            <x>-1.0</x>
            <y> 0.0</y>
            <z> 0.0</z>
        </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>knob</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>controls/test/warn-knob</property>  
            <value>1.0</value>
          </binding>
        <mod-up>
          <binding>
            <command>property-assign</command>
            <property>controls/test/warn-knob</property>  
            <value>0.0</value>
          </binding>
        </mod-up>
      </action>
    </animation>
    
