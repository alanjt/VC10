<PropertyList>
 <path>RCo10.ac</path>	
 
	<animation>
		<type>spin</type>
		<object-name>engineCone</object-name>
		<object-name>engineDisk</object-name>
		<object-name>engineDiskFast</object-name>
		<property>engines/engine[3]/n1</property>
		<factor>20</factor>   
		<center>
		 <x-m>0.0</x-m>
		 <y-m>0.0</y-m>
		 <z-m>0.0</z-m>
		</center>
		<axis>
		 <x>1</x>
		 <y>0</y>
		 <z>0</z>
		</axis>
	</animation>
	
	<animation>
	<type>select</type>
	<object-name>engineDisk</object-name>
		<condition>
			<less-than>
				<property>engines/engine[3]/n1</property>
				<value>25</value>
			</less-than>
		</condition>
	</animation>
	
	<animation>
	<type>select</type>
	<object-name>exhaustHeat</object-name>
		<condition>
			<greater-than>
				<property>engines/engine[3]/n1</property>
				<value>31</value>
			</greater-than>
		</condition>
	</animation>
			
	<animation>
		<type>material</type>
		<object-name>exhaustHeat</object-name>
		<emission>
			<red>0.002</red>
			<green>0.002</green>
			<blue>0.000025</blue>
			<factor-prop>engines/engine[3]/n1</factor-prop>
		</emission>
	</animation>
	
  <!-- smoke -->
	<model>
		<path>Aircraft/VC10/Models/Effects/smoke_4.xml</path>
		<offsets>
			<x-m> 2.1</x-m>
			<y-m> 0.0</y-m>
			<z-m> 0.0</z-m>
		</offsets>
	</model>
	
	<model>
		<path>Aircraft/VC10/Models/Effects/smoke_4_crash.xml</path>
		<offsets>
			<x-m> 2.1</x-m>
			<y-m> 0.0</y-m>
			<z-m> 0.0</z-m>
		</offsets>
	</model>
	
</PropertyList>
